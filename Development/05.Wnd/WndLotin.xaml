<Window x:Class="Development.WndLotin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="WndLotin" 
        WindowStartupLocation="CenterScreen"
        Height="300" 
        Width="500">
    <Grid MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"  Foreground="White" Background="#333333" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" FontFamily="Elephant">LOT IN DATA</Label>
            <Grid Grid.Column="1" Background="#333333">
                <StackPanel Orientation="Horizontal">
                    <Label  Foreground="White" Background="#333333" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="9" FontFamily="Elephant">On Keyboard</Label>
                    <ToggleButton x:Name="btSwitchOnKeyBoard"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                </StackPanel>
                
            </Grid> 
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Margin="1" Background="LightGray"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="15" Grid.Row="0" Grid.Column="0" Foreground="#333333">WORK GROUP</Label>
            <TextBox Margin="1" Grid.Row="0" Grid.Column="1" x:Name="txtWorkGroup" FontWeight="Bold" FontSize="15" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"></TextBox>
            <Label Margin="1" Background="LightGray" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="15" Grid.Row="1" Grid.Column="0" Foreground="#333333">DEVICE ID</Label>
            <TextBox Margin="1" FontWeight="Bold" FontSize="15" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" x:Name="txtDeviceId">
                <TextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=myTextBox}" IsEnabled="False"/>
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
            <Label Margin="1" Background="LightGray" FontWeight="Bold" FontSize="15" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" Foreground="#333333">LOT ID</Label>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition>
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" FontWeight="Bold" FontSize="15" Margin="1" VerticalContentAlignment="Center" x:Name="txtLotId"  HorizontalContentAlignment="Left">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=myTextBox}" IsEnabled="False"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>

                <Label Grid.Column="1" Margin="1" Background="LightGray"  Foreground="#333333" FontSize="15" FontWeight="Bold" VerticalContentAlignment="Center" >UnLimit</Label>
            </Grid>
            <Label Margin="1" Background="LightGray" FontWeight="Bold" FontSize="15" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="0" Foreground="#333333">LOT QTY</Label>
            <TextBox FontWeight="Bold" FontSize="15" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="1" x:Name="txtLotQty"></TextBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button  x:Name="btnOK" Grid.Column="0" Background="#6787c0" Content="OK" Margin="5" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Style="{StaticResource ssButton}">
              

            </Button>
            <Button x:Name="btnCancel" Grid.Column="1" Content="CANCEL" Margin="5" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Background="#6787c0" Style="{StaticResource ssButton}" >
               
            </Button>
        </Grid>
    </Grid>
</Window>
