<Window x:Class="Development.WndLoginMES"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen" 
         WindowStyle="None" 
         AllowsTransparency="True" 
         Topmost="True" 
         Background="Transparent"
        Title="WndLoginMES" 
        Height="500" Width="600">
    <Grid MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="/01.Image/close1.png" Panel.ZIndex="1" Grid.Column="1" Style="{StaticResource imgclose}" MouseDown="Image_Mouseup"/>

        <Border Background="#FFFFFF" Grid.Column="1" CornerRadius="10,10,10,10" BorderThickness="1" BorderBrush="#6787c0">

            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Sign in to App" Style="{StaticResource titleText}" Foreground="#6787c0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="3" Direction="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0 10" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ButtonCircle}" Width="110" x:Name="btOperator">
                        <StackPanel>
                            <Image Source="/01.Image/Operator.png" Height="50"></Image>
                            <TextBlock Text="Operator" Style="{StaticResource normalText}" Foreground="Black"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ButtonCircle}" Width="110" x:Name="btManager">
                        <StackPanel>
                            <Image Source="/01.Image/Manager2.png" Height="50"></Image>
                            <TextBlock Text="Manager" Style="{StaticResource normalText}" Foreground="Black"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ButtonCircle}" Width="110" x:Name="btAutoteam">
                        <StackPanel>
                            <Image Source="/01.Image/Autotem2.png" Height="50"></Image>
                            <TextBlock Text="Auto Team" Style="{StaticResource normalText}" Foreground="Black"></TextBlock>
                        </StackPanel>
                    </Button>
                  
                </StackPanel>
                <TextBlock Padding="170 3 0 0" Text="Select a login permission above " HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource normalText}" Foreground="#878787" Margin="0 0 0 0"/>
               
               
                <Border BorderThickness="1" BorderBrush="#ACB0AF" Margin="70 7" CornerRadius="5">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/01.Image/id.png" Height="21"></Image>
                        <TextBlock x:Name="textId" Text="Operator" Foreground="Black" MouseDown="textId_MouseDown" Style="{StaticResource textHint}"/>


                    </Grid>
                </Border>

                <Border BorderThickness="1" BorderBrush="#ACB0AF" Margin="70 1" CornerRadius="5">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/01.Image/id.png" Height="21"></Image>

                        <TextBox x:Name="tbxCodeUserName" Text="Click the icon to Login" Style="{StaticResource textBox}" KeyDown="Enter_KeyDown" GotFocus="tbxCodeUserName_GotFocus"/>

                    </Grid>
                </Border>
                
                
                <Border BorderThickness="1" BorderBrush="#ACB0AF" Margin="70 1" CornerRadius="5">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/01.Image/key.png" Height="20"></Image>

                        <PasswordBox x:Name="txtPassword"  Style="{StaticResource textBox}" KeyDown="Enter_KeyDown" />

                    </Grid>
                </Border>
                
                
                <Button Content="Login" Style="{StaticResource mainButton}" x:Name="btSignin" FontWeight="Bold" >

                </Button>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="200 10 0 0" Content="Cancel" Style="{StaticResource mainButton}" x:Name="btcancel" FontWeight="Bold" >

                    </Button>
                    <Label Padding="70 0 10 0"  Foreground="#878787" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="9">On Keyboard</Label>
                    <ToggleButton x:Name="btSwitchOnKeyBoard"   Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                </StackPanel>
               
            </StackPanel>

        </Border>
    </Grid>
</Window>
