<Window x:Class="Development.WndComfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="WndComfirm"  Height="200" Width="650">
    <Grid MouseDown="Window_MouseDown">
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="0,5,5,5" />
                <Setter Property="Background" Value="CadetBlue" />
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>

            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="Black"/>

            </Style>
        </Grid.Resources>
        <Border BorderThickness="2" CornerRadius="10" BorderBrush="#6787c0" Background="White">
       
        <Grid Background="Transparent">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.8*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#333333" Margin="3">
                <TextBlock x:Name="tbxMessage" Text="Message :" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource titleText}" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" Opacity="0.2" ShadowDepth="3" Direction="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <Grid Background="Transparent" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="10" Width="150" Content="OK"  x:Name="btOk" FontWeight="Bold" >

                </Button>
                <Button Grid.Column="1" Margin="10" Width="150" Content="CANCEL" x:Name="btCaner" FontWeight="Bold" >

                </Button>
            </Grid>

        </Grid>
    </Border>

    </Grid>
</Window>
