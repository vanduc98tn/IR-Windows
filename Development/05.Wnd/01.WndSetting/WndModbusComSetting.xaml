<Window x:Class="Development.WndModbusComSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        Title="WndModbusComSetting" Height="300" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2.8*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="Margin" Value="10,0,5,0"/>
                    <Setter Property="FontSize" Value="20"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="10,2,100,2"/>
                </Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Margin" Value="10,2,100,2"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="0">Port Name</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="0">Baudrate</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="0">Data Bits</TextBlock>
            <TextBlock Grid.Row="4" Grid.Column="0">Stop Bits</TextBlock>
            <TextBlock Grid.Row="5" Grid.Column="0">Parity</TextBlock>
            <TextBlock Grid.Row="5" Grid.Column="0">Parity</TextBlock>
            <TextBlock Grid.Row="6" Grid.Column="0">Address</TextBlock>

            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cbPortName" SelectedValuePath="Content"></ComboBox>
            <ComboBox Grid.Row="2" Grid.Column="1"  x:Name="cbBaudrate" SelectedValuePath="Content">
                <ComboBoxItem Tag="1200">1200</ComboBoxItem>
                <ComboBoxItem Tag="2400">2400</ComboBoxItem>
                <ComboBoxItem Tag="4800">4800</ComboBoxItem>
                <ComboBoxItem Tag="9600">9600</ComboBoxItem>
                <ComboBoxItem Tag="19200">19200</ComboBoxItem>
                <ComboBoxItem Tag="28800">28800</ComboBoxItem>
                <ComboBoxItem Tag="57600">57600</ComboBoxItem>
                <ComboBoxItem Tag="115200">115200</ComboBoxItem>
                <ComboBoxItem Tag="230400">230400</ComboBoxItem>
                <ComboBoxItem Tag="460800">460800</ComboBoxItem>
                <ComboBoxItem Tag="921600">921600</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Row="3" Grid.Column="1"  x:Name="cbDataBits" SelectedValuePath="Content">
                <ComboBoxItem Tag="7">7</ComboBoxItem>
                <ComboBoxItem Tag="8">8</ComboBoxItem>
                <ComboBoxItem Tag="9">9</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cbStopBits" SelectedValuePath="Content">
                <ComboBoxItem Tag="0">None</ComboBoxItem>
                <ComboBoxItem Tag="1">One</ComboBoxItem>
                <ComboBoxItem Tag="2">Two</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Row="5" Grid.Column="1" x:Name="cbParity" SelectedValuePath="Content">
                <ComboBoxItem Tag="0">None</ComboBoxItem>
                <ComboBoxItem Tag="1">Even</ComboBoxItem>
                <ComboBoxItem Tag="2">Odd</ComboBoxItem>
                <ComboBoxItem Tag="3">Mark</ComboBoxItem>
                <ComboBoxItem Tag="4">Space</ComboBoxItem>
                
            </ComboBox>
            <TextBox x:Name="txtAddressMB" Grid.Row="6" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">1</TextBox>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="10" Width="150" Content="OK" Style="{StaticResource mainButton}" x:Name="btOk" FontWeight="Bold" ></Button>
            <Button Grid.Column="1" Margin="10" Width="150" Content="CANCEL" Style="{StaticResource mainButton}" x:Name="btCancel" FontWeight="Bold" ></Button>
        </Grid>

    </Grid>
</Window>
