<Window x:Class="Development.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        Title="MainWindow"  WindowStyle="None"
        Height="1024" Width="1284"      
        WindowState="Maximized">
    <Grid MouseLeftButtonDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="65" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="AliceBlue">
            <Grid.Resources>

                <Style TargetType="Button" BasedOn="{StaticResource ButtonMain50}">
                    <Setter Property="Background" Value="White"></Setter>
                    <Setter Property="BorderThickness" Value="0.7"></Setter>
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                </Style>

            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <Border Background="AliceBlue">

                </Border>
            </Grid>
            <Grid Grid.Column="1" Margin="1,0.1,0.1,0.1">
                <Button x:Name="bthide"  >
                    <Image Margin="0.5" Source="01.Image/mini1.png" Height="12" Width="12" Style="{StaticResource imgclose}" ></Image>
                </Button>

            </Grid>
            <Grid Grid.Column="2" Margin="1,0.1,0.1,0.1">
                <Button x:Name="btminimized"  >
                    <Image Margin="0.5" Source="01.Image/mini2.png"  Height="12" Width="12" Style="{StaticResource imgclose}"></Image>
                </Button>


            </Grid>
            <Grid Grid.Column="3" Margin="1,0.1,0.1,0.1">
                <Button x:Name="btClose" >
                    <Image Margin="0.5" Source="01.Image/close1.png"  Height="12" Width="12"  Style="{StaticResource imgclose}"></Image>
                </Button>


            </Grid>
        </Grid>
        <Grid Grid.Row="1" Background="#f5f5f5">
            <Grid.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Background" Value="#879ec8" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="0,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Padding" Value="5,0" />
                </Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="White" />
                </Style>

            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                <ColumnDefinition Width="2.1*"></ColumnDefinition>
                <ColumnDefinition Width="2.1*"></ColumnDefinition>
                <ColumnDefinition Width="2.1*"></ColumnDefinition>
                <ColumnDefinition Width="2.3*"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Border BorderThickness="2" BorderBrush="#879ec2">
                    <Image Margin="2" Source="/01.Image/Logo.png" Stretch="Fill"></Image>
                </Border>


            </Grid>


            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Border  Grid.Row="0" CornerRadius="0 7 0 0 " Background="#879ec2">
                    <TextBlock x:Name="txbNameMachine" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold">Name Machine</TextBlock>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" CornerRadius="0 0 7 0 " Background="#6787c0">
                        <Label  Content="{Binding BuildTime}" x:Name="TblVersion" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0 0 20 0" Foreground="White" FontSize="12" Background="#6787c0"></Label>
                    </Border>
                    <Label Grid.Column="0" HorizontalContentAlignment="Left" Background="#6787c0" Name="lblCurrentDate">2020/02/02 02:02:02</Label>

                </Grid>

            </Grid>



            <Grid Grid.Row="0" Grid.Column="2" Margin="3,0,0,0">
                <Button Style="{StaticResource ButtonMain50 }" Name="btMain">
                    <StackPanel>
                        <Label Grid.Row="0" FontSize="20" FontWeight="Bold" Background="Transparent"
                           Margin="0,5,0,0">MAIN</Label>
                        <Label Grid.Row="1" Background="Transparent" Margin="0,-2,0,0">Main Page</Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3" Margin="3,0,3,0">
                <Button Style="{StaticResource ButtonMain50}" Name="btMenu">
                    <StackPanel>
                        <Label Grid.Row="0" FontSize="20" FontWeight="Bold"
                        Background="Transparent" Margin="0,8,0,0">MENU</Label>
                        <Label Grid.Row="1" Background="Transparent" Margin="0,-2,0,0">Main Menu</Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="4">
                <Button Style="{StaticResource ButtonMain50}" Name="btIO">
                    <StackPanel>
                        <Label Grid.Row="0" FontSize="20" FontWeight="Bold"
                        Background="Transparent" Margin="0,8,0,0">I/O</Label>
                        <Label Grid.Row="1" Background="Transparent" Margin="0,-2,0,0">Input/Output</Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="5" Margin="3,0,0,0">
                <Button Style="{StaticResource ButtonMain50}" Name="btLastJam">
                    <StackPanel>
                        <Label Grid.Row="0" FontSize="20" FontWeight="Bold"
                        Background="Transparent" Margin="0,8,0,0">LAST LARM</Label>
                        <Label Grid.Row="1" Background="Transparent" Margin="0,-2,0,0">Last Larm display</Label>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="7" Margin="3,0,3,0">
                <Button Background="Transparent" Name="btPower" BorderThickness="0">
                    <Button.Content>
                        <Image Source="01.Image/Close.png"></Image>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>

        <Frame Grid.Row="2" x:Name="frmMainContent">
        </Frame>
    </Grid>
</Window>
