<Page x:Class="Development.PgMechanicalMenuPLC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenuPLC">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Foreground="#6787c0" Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Foreground="#6787c0" Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Foreground="#6787c0" Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >

                        <Button x:Name="btSetting1" Background="#333333"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->

                                <TextBlock Padding="10" Foreground="White" Text="Device PLC"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting2"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->

                                <TextBlock Padding="10" Text="MES"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>



                        <Button x:Name="btSetting3" Height="60" Width="215"  Margin="0 5 5 5" BorderThickness="0" >
                            <StackPanel Orientation="Horizontal">



                                <TextBlock Padding="10" Text="TCP Vision"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>



                        <Button x:Name="btSetting4"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->

                                <TextBlock Padding="10" Text="Tester"  Margin="10"  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> PLC SETTING
                </Label>
            </Grid>
            <Grid Grid.Row="1" Background="#DDDDDD">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>
                    <!--<Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="18" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontFamily" Value="Arial"/>

                </Style>-->
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#ECECEC" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Light" />
                        <Setter Property="Foreground" Value="Black"/>

                    </Style>
                </Grid.Resources>
                <!--<Border CornerRadius=" 10 ">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#879ec0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,230,140,0,270" Fill="#879ec8" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>
                    </Canvas>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                </Grid>
            </Border>-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Foreground="Black" Content="Logs" Background="White">
                        </Label>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White"
              VerticalScrollBarVisibility="Visible"></TextBox>
                            <Button Grid.Row="1" Name="btLogClear" Margin="2,2,10,2" Foreground="Black" FontFamily="Arial" FontWeight="Light"  Content="Clear">
                            </Button>
                        </Grid>
                    </Grid>
                    
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label x:Name="lbConnect" Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">CONFIG</Label>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="350"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--<Image  Grid.Column="0" Source="/Folder/PageUI/Icon/plc.png" Margin="8"></Image>-->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">Setting Device</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="btnSave" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                            <StackPanel Orientation="Horizontal">
                                               
                                                <TextBlock VerticalAlignment="Center" Padding="2,0,0,0">Save</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnOpen" Grid.Column="1" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                            <StackPanel Orientation="Horizontal">
                                               
                                                <TextBlock   VerticalAlignment="Center" Padding="3,0,0,0">Open</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnClose" Grid.Column="1" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                            <StackPanel Orientation="Horizontal">
                                                
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Close</TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Margin="1" Grid.Row="0" Grid.Column="0">
                                            <ComboBox HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0"  x:Name="cbSelectDeviceType" SelectedValuePath="Content">
                                                <!--<ComboBoxItem Tag="ModbusRTU">ModbusRTU</ComboBoxItem>
                                                <ComboBoxItem Tag="ModbusTCP">ModbusTCP</ComboBoxItem>
                                                <ComboBoxItem Tag="XGTLS">XGTLS</ComboBoxItem>-->
                                                <!--<ComboBoxItem Tag="MCProtocolBinarySerial">MCProtocolBinarySerial</ComboBoxItem>
                                                <ComboBoxItem Tag="MCProtocolAsciiSerial">MCProtocolAsciiSerial</ComboBoxItem>-->
                                                <ComboBoxItem Tag="MCProtocolBinaryEthernet">Mitsubishi_MC_Protocol_Binary_TCP</ComboBoxItem>
                                                <ComboBoxItem Tag="MCProtocolAsciiEthernet">Mitsubishi_RS422_SC09</ComboBoxItem>
                                                <ComboBoxItem Tag="LSXGTServerTCP">LS_XGTServer_TCP</ComboBoxItem>
                                                <ComboBoxItem Tag="LSModbusCOM">LS_XGTServer_COM</ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                        <Grid  Grid.Row="1" Grid.Column="0">
                                            <Button x:Name="btnSettingDevice">

                                                <StackPanel Orientation="Horizontal">
                                                    
                                                    <TextBlock  VerticalAlignment="Center" Padding="10,0,0,0">Setting Device</TextBlock>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                           
                        </Grid>
                        <Grid Grid.Row="2">
                            <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">FUNTION</Label>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="520"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="180"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="180"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">Single Data Write Bit</Label>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                   
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Column="0" Grid.Row="0" x:Name="btReadBit">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read Bit</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="1" x:Name="btReadWord">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read Word</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="2" x:Name="btReadDWord">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read DWord</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="3" x:Name="btReadString">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read String</TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="cbSelectDevice" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectedValuePath="Content">
                                                <ComboBoxItem  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >D</ComboBoxItem>
                                                <ComboBoxItem  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">M</ComboBoxItem>
                                            </ComboBox>
                                            <TextBox x:Name="tbxValueInput" Grid.Column="1" Margin="3 1 " VerticalContentAlignment="Center" FontSize="20"></TextBox>
                                            <TextBox x:Name="tbxValueList" Grid.Column="2" Margin="3 1 "  VerticalContentAlignment="Center" FontSize="20">1</TextBox>
                                             
                                        </Grid>
                                        <TextBox x:Name="tbxValueOutput" TextWrapping="Wrap" Grid.Row="1"  Background="White" Foreground="Black" VerticalScrollBarVisibility="Visible"></TextBox>

                                       
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">Single Data Write Bit</Label>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Column="0" Grid.Row="0" x:Name="btWriteBit">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write Bit</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="1" x:Name="btWriteWord">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write Word</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="2" x:Name="btWriteDWord">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write DWord</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="0" Grid.Row="3" x:Name="btWriteString">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write String</TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50"></RowDefinition>
                                            <RowDefinition Height="2*"></RowDefinition>
                                            <RowDefinition Height="1.3*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>

                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="cbSelectDeviceOut" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectedValuePath="Content">
                                                <ComboBoxItem  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >D</ComboBoxItem>
                                                <ComboBoxItem  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">M</ComboBoxItem>
                                            </ComboBox>
                                            <TextBox x:Name="tbxValueInputW" Grid.Column="1" Margin="3 1 " VerticalContentAlignment="Center" FontSize="20"></TextBox>
                                        </Grid>
                                        <TextBox x:Name="tbxValueinput2" TextWrapping="Wrap" Grid.Row="1"  Background="White" Foreground="Black" VerticalScrollBarVisibility="Visible"></TextBox>
                                        <Label Grid.Row="2" >
                                            <TextBlock FontSize="17" Foreground="PaleVioletRed">
                                                <Run Text="Note: The string an convert value"/>
                                                <LineBreak/>
                                                <Run Text="if bool: true,false,0,1"/>
                                            </TextBlock>
                                        </Label>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
